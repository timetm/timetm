{# SHOW EVENT #}

{% block mainContent -%}
<div class="listContainer">

    <table class="records_list">
        <tbody>
            <tr>
                <th>
                    Event details
                </th>
            </tr>
            <tr>
                <td>
                    <label>Title</label>
                    <span>{{ entity.title }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Place</label>
                    <span>{{ entity.place }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Description</label>
                    <span>{{ entity.description }}</span>
                </td>
            </tr>

            {% if entity.startdate|date('d M Y') == entity.enddate|date('d M Y') %}
            <tr>
                <td>
                    <label>Date</label>
                    <span>{{ entity.startdate|date('d M Y') }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Time</label>
                    <span>{{ entity.startdate|date('H:i') }} to {{ entity.enddate|date('H:i') }}</span>
                </td>
            </tr>
            {% else %}
            <tr>
                <td>
                    <label>Start date</label>
                    <span>{{ entity.startdate|date('d M Y H:i') }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <label>End date</label>
                    <span>{{ entity.enddate|date('d M Y H:i') }}</span>
                </td>
            </tr>
            {% endif %}

            <tr>
                <td>
                    <label>Full day</label>
                    <span>{{ entity.fullday }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Participants</label>
                    <span>
                        	{% for participant in entity.participants %}
                                {% if loop.last %}
                                    {{ participant.lastname }}
                                {% else %}
                                    {{ participant.lastname }},
                                {% endif %}
                        	{% endfor %}
                    </span>
                </td>
            </tr>
            <tr>
                <td class="align-center">
					<a id="eventBackButton" class="button" href="{{ path('event') }}">{{ buttonText |trans }}</a>
					<a class="button actionButton" href="{{ path('event_edit', { 'id': entity.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>

</div>
{% endblock %}
