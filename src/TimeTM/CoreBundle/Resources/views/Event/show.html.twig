{# SHOW EVENT #}

{% block mainContent -%}
<div class="listContainer">

    <h1>{{ 'event.details'|trans }}</h1>

    <table class="view">
        <tbody>
            <tr>
                <td>
                    {{ 'event.title.label'|trans }}
                </td>
                <td>
                    {{ event.title }}
                </td>
            </tr>

            {% if event.startdate|date('d M Y') == event.enddate|date('d M Y') %}
            <tr>
                <td>
                    {{ 'event.date.label'|trans }}
                </td>
                <td>
                    {{ event.startdate|date('d M Y') }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'event.time.label'|trans }}
                </td>
                <td>
                    {{ event.startdate|date('H:i') }} to {{ event.enddate|date('H:i') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td>
                    Start date
                </td>
                <td>
                    {{ event.startdate|date('d M Y H:i') }}
                </td>
            </tr>
            <tr>
                <td>
                    End date
                </td>
                <td>
                    {{ event.enddate|date('d M Y H:i') }}
                </td>
            </tr>
            {% endif %}

            <tr>
                <td>
                    {{ 'event.place.label'|trans }}
                </td>
                <td>
                    {{ event.place }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'event.description.label'|trans }}
                </td>
                <td>
                    {{ event.description }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'event.client.label'|trans }}
                </td>
                <td>
                    {% if event.client %}
                        {{ event.client }}
                    {% else %}
                        {{ 'none.masc'|trans }}
                    {%  endif %}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'agenda.name.sing'|trans }}
                </td>
                <td>
                    {{ event.agenda }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'event.fullday.label'|trans }}
                </td>
                <td>
                    {% if event.fullday %}
                        {{ 'val.yes'|trans }}
                    {% else %}
                        {{ 'val.no'|trans }}
                    {%  endif %}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'event.participants.label'|trans }}
                </td>
                <td>
                    {% for participant in event.participants %}
                        {% if loop.last %}
                            {{ participant }}
                        {% else %}
                            {{ participant }}, <br>
                        {% endif %}
                    {% else %}
                        {{ 'none.masc'|trans }}
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <td class="align-center" colspan="2">
					<a id="eventBackButton" class="button" href="{{ path('event') }}">{{ buttonText |trans }}</a>
					<a class="button actionButton" href="{{ path('event_edit', { 'id': event.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>

</div>
{% endblock %}
