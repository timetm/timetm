{# SHOW EVENT #}

{% block mainContent -%}
<div class="listContainer">

    <h1>Event details</h1>

    <table class="view">
        <tbody>
            <tr>
                <td>
                    Title
                </td>
                <td>
                    {{ entity.title }}
                </td>
            </tr>
            <tr>
                <td>
                    Place
                </td>
                <td>
                    {{ entity.place }}
                </td>
            </tr>
            <tr>
                <td>
                    Description
                </td>
                <td>
                    {{ entity.description }}
                </td>
            </tr>

            {% if entity.startdate|date('d M Y') == entity.enddate|date('d M Y') %}
            <tr>
                <td>
                    Date
                </td>
                <td>
                    {{ entity.startdate|date('d M Y') }}
                </td>
            </tr>
            <tr>
                <td>
                    Time
                </td>
                <td>
                    {{ entity.startdate|date('H:i') }} to {{ entity.enddate|date('H:i') }}
                </td>
            </tr>

            {% else %}
            <tr>
                <td>
                    Start date
                </td>
                <td>
                    {{ entity.startdate|date('d M Y H:i') }}
                </td>
            </tr>
            <tr>
                <td>
                    End date
                </td>
                <td>
                    {{ entity.enddate|date('d M Y H:i') }}
                </td>
            </tr>
            {% endif %}
            
            <tr>
                <td>
                    Full day
                </td>
                <td>
                    {{ entity.fullday }}
                </td>
            </tr>
            <tr>
                <td>
                    Participants
                </td>
                <td>
                    {% for participant in entity.participants %}
                        {% if loop.last %}
                            {{ participant }}
                        {% else %}
                            {{ participant }},
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <td class="align-center" colspan="2">
					<a id="eventBackButton" class="button" href="{{ path('event') }}">{{ buttonText |trans }}</a>
					<a class="button actionButton" href="{{ path('event_edit', { 'id': entity.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>

</div>
{% endblock %}
