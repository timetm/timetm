{# src/TimeTM/CalendarBundle/Resources/views/Day/content.html.twig #}
<table class="fixed">
	<tr>
		<td width="75px">
			<table class="innerLabel fixed">
				<tr>
					<td>
						&nbsp;
					</td>
				</tr>
{% for time in times %}
				<tr>
					<td>
						{{ time.time }}
					</td>
				</tr>
{% endfor %}
			</table>
		</td>
		<td>
			<table id="calendar" class="fixed" >
				<tr>
					<td>
						&nbsp;
					</td>
				</tr>
{% for time in times %}
				<tr>
					<td data-url="{{ dayStamp }}/{{ time.url }}" class="event-container">
	{% for day in day %}
		{% for event in day.events %}
			{% if event.startdate|date("G") == time.hour %}
				    	<div class="event" data-duration="{{ event.duration }}" data-startmins="{{ event.startdate|date("i") }}">
							<p>
								<a class="inner" 
									href="{{ path('event_show', {'id': event.id}) }}" 
									title="{{ event.title }} - {{ event.place }}">
									{{ event.title|length > 20 ? event.title[:20] ~ '...': event.title  }}
								</a>
							</p>
				    	</div>
			{% endif %}
		{% endfor %}
	{% endfor %}
					</td>
				</tr>
{% endfor %}
























			</table>
		</td>
	</tr>
</table>
