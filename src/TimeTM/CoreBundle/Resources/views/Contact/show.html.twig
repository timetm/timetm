{% extends '::base.html.twig' %}

{% block mainContent -%}
<div class="listContainer">

    <table class="records_list hcentered">
        <tbody>
			<tr>
				<th colspan="2">
					contact details
				</th>
			</tr>
            <tr>
                <td>Lastname</td>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <td>Firstname</td>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <td>Iscompany</td>
                <td>
                    {% if entity.isCompany %}
                    	yes
                    {% else %}
                        no
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>Isclient</td>
                <td>
                    {% if entity.isClient %}
                    	yes
                    {% else %}
                        no
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td colspan="2" class="align-center">
					<a class="button" href="{{ path('contact') }}">
					    {{ 'action.back.list'|trans }}
					</a>
					<a class="button" href="{{ path('contact_edit', { 'id': entity.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>


</div>
{% endblock %}
