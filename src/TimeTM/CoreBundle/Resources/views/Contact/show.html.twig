
{% block mainContent -%}

<div class="listContainer">

    <h1>{{ 'contact.details'|trans }}</h1>

    <table class="view overflow">
        <tbody>
            <tr>
                <td>
                    {{ 'contact.lastname'|trans }}
                </td>
                <td>
                    {{ contact.lastname }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'contact.firstname'|trans }}
                </td>
                <td>
                    {{ contact.firstname }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'contact.email'|trans }}
                </td>
                <td>
                    {{ contact.email }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'contact.phone'|trans }}
                </td>
                <td>
                    {{ contact.phone }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'contact.company'|trans }}
                </td>
                <td>
                    {% if contact.isCompany %}
                        {{ 'val.yes'|trans }}
                    {% else %}
                        {{ 'val.no'|trans }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    {{ 'contact.client'|trans }}
                </td>
                <td>
                    {% if contact.isClient %}
                        {{ 'val.yes'|trans }}
                    {% else %}
                        {{ 'val.no'|trans }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td class="align-center" colspan="2">
					<a id="eventBackButton" class="button" href="{{ path('contact') }}">{{ buttonText |trans }}</a>
					<a class="button actionButton" href="{{ path('contact_edit', { 'id': contact.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>


</div>
{% endblock %}
