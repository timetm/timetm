{% extends '::base.html.twig' %}

{% block mainContent -%}
<div class="listContainer">
    <h1>Contact</h1>

    <table class="records_list hcentered">
        <tbody>
{#             <tr>#}
{#                 <td>Id</td>#}
{#                 <td>{{ entity.id }}</td>#}
{#             </tr>#}
            <tr>
                <td>Lastname</td>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <td>Firstname</td>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <td>Iscompany</td>
                <td>{{ entity.isCompany }}</td>
            </tr>
            <tr>
                <td>Isclient</td>
                <td>
                {% if entity.isClient %}
                	yes
                {% endif %}
                </td>
            </tr>
            <tr>
                <td colspan="2" class="align-center">
					<a class="button" href="{{ path('contact') }}">
					    {{ 'action.back.list'|trans }}
					</a>
					<a class="button" href="{{ path('contact_edit', { 'id': entity.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>


</div>
{% endblock %}
