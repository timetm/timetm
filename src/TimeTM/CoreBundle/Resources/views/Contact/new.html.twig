{# NEW CONTACT #}

{% extends '::base.html.twig' %}

{% block mainContent -%}

    <form action="{{ path('contact_create') }}" method="POST" {{ form_enctype(form) }}>

    <table class="form records_list hcentered fullscreen">
    	{% if msg is defined %}
    	<tr>
    		<td colspan="">
				{{ msg }}
    		</td>
    	</tr>
    	{% endif %}
    	<tr>
			<th>
				add an contact
			</th>
		</tr>
    	<tr>
    		<td>
    			{{ form_label(form.lastname) }}
    			{{ form_widget(form.lastname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.firstname) }}
    			{{ form_widget(form.firstname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.email) }}
    			{{ form_widget(form.email) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.phone) }}
    			{{ form_widget(form.phone) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			<div class="floatWrapper">
	    			<div class="float2">
		    			{{ form_label(form.company) }}
		    			{{ form_widget(form.company) }}
	    			</div>
					<div class="float2">
		    			{{ form_label(form.client) }}
		    			{{ form_widget(form.client) }}
	    			</div>
	    		</div>
    		</td>
    	</tr>
    	<tr>
    		<td colspan="" class="align-center">
    			<a class="button" href="{{ path('contact') }}">
		            {{ 'action.back.list'|trans }}
		        </a>
		        {{ form_widget(form.submit) }}
    		</td>
    	</tr>
    </table>
    {{ form_widget(form._token) }}
    </form>
{% endblock %}
