{% extends '::base.html.twig' %}

{% block mainContent -%}
<div class="listContainer">

    <h1>Contact creation</h1>

    <div>{% if msg is defined %}{{ msg }}{% endif %}</div>
    
    <form action="{{ path('contact_create') }}" method="POST" {{ form_enctype(form) }}>

    <table class="records_list hcentered">
    	<tr>
    		<td>
    			{{ form_label(form.lastname) }}
    		</td>
    		<td>
    			{{ form_widget(form.lastname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.firstname) }}
    		</td>
    		<td>
    			{{ form_widget(form.firstname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.email) }}
    		</td>
    		<td>
    			{{ form_widget(form.email) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.phone) }}
    		</td>
    		<td>
    			{{ form_widget(form.phone) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.company) }}
    		</td>
    		<td>
    			{{ form_widget(form.company) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.client) }}
    		</td>
    		<td>
    			{{ form_widget(form.client) }}
    		</td>
    	</tr>
    	<tr>
    		<td colspan="2" class="align-center">
    			{{ form_widget(form.submit) }}
    			<a class="button" href="{{ path('contact') }}">
		            Back to the list
		        </a>
    		</td>
    	</tr>
		
    </table>
    {{ form_widget(form._token) }}
    </form>
</div>
{% endblock %}
