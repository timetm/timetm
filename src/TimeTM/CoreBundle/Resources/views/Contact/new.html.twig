{% extends '::base.html.twig' %}

{% block mainContent -%}
{# <div class="listContainer">#}

    <h1>Contact creation</h1>

{#     <div>{% if msg is defined %}{{ msg }}{% endif %}</div>#}
    
    <form action="{{ path('contact_create') }}" method="POST" {{ form_enctype(form) }}>
<div id="form_body">
    <table class="records_list hcentered">
    	{% if msg is defined %}
    	<tr>
    		<td colspan="2">
				{{ msg }}
    		</td>
    	</tr>
    	{% endif %}
    	<tr>
    		<td>
    			{{ form_label(form.lastname) }}
    		</td>
    		<td>
    			{{ form_widget(form.lastname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.firstname) }}
    		</td>
    		<td>
    			{{ form_widget(form.firstname) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.email) }}
    		</td>
    		<td>
    			{{ form_widget(form.email) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.phone) }}
    		</td>
    		<td>
    			{{ form_widget(form.phone) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.company) }}
    		</td>
    		<td>
    			{{ form_widget(form.company) }}
    		</td>
    	</tr>
		<tr>
    		<td>
    			{{ form_label(form.client) }}
    		</td>
    		<td>
    			{{ form_widget(form.client) }}
    		</td>
    	</tr>
    	<tr>
    		<td colspan="2" class="align-center">
    			<a class="button" href="{{ path('contact') }}">
		            {{ 'action.back.list'|trans }}
		        </a>
		        {{ form_widget(form.submit) }}
    		</td>
    	</tr>
    </table>
    {{ form_widget(form._token) }}
    </div>
    </form>
{# </div>#}
{% endblock %}
