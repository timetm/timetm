
{% block mainContent -%}

<div class="listContainer">

    <h1>Task</h1>

    <table class="view overflow">
        <tbody>
            <tr>
                <td>Title</td>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <td>Duedate</td>
                <td>{% if task.duedate %}{{ task.duedate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <td>User</td>
                <td>{{ task.userassigned }}</td>
            </tr>
            <tr>
                <td>Repetition</td>
                <td>{{ task.repetition }}</td>
            </tr>
            <tr>
                <td class="align-center" colspan="2">
                    <a id="eventBackButton" class="button" href="{{ path('task_index') }}">{{ buttonText |trans }}</a>
                    <a class="button actionButton" href="{{ path('task_edit', { 'id': task.id }) }}">
                        {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

</div>
{% endblock %}
