
{% block mainContent -%}

<div class="listContainer">

    <h1>{{ 'task.list'|trans }}</h1>

    <table>
        <thead>
            <tr class="tableHeader">
                <th>{{ 'task.title.label'|trans }}</th>
                <th>{{ 'task.duedate'|trans }}</th>
                <th>{{ 'task.user'|trans }}</th>
                <th>{{ 'task.repetition'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr data-href="{{ path('task_show', { 'id': task.id }) }}">
                <!-- <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.id }}</a></td> -->
                <td>{{ task.title }}</td>
                <td>{% if task.duedate %}{{ task.duedate|date('d/m/Y') }}{% endif %}</td>
                <td>{{ task.userassigned }}</td>
                <td>{{ task.repetition }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tr>
            <td colspan="5" class="align-center">
                <a class="button" href="{{ path('task_new') }}">
                    {{ 'task.new'|trans }}
                </a>
            </td>
        </tr>
    </table>
</div>
{% endblock %}
