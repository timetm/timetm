{% extends '::base.html.twig' %}

{% block title %}

    {% if template == 'index' %}
        {{ 'task.name.plur'|trans|capitalize }}
    {% elseif template == 'new' %}
        {{ 'task.new'|trans|capitalize }}
    {% elseif template == 'show' %}
        {{ 'task.details'|trans|capitalize }}
    {% elseif template == 'edit' %}
        {{ 'task.edit'|trans|capitalize }}
    {% endif %}

{% endblock %}


{% block ttm_stylesheets %}
	{{ parent() }}
	<link href="/css/calendarpanel.css" media="screen, projection" rel="stylesheet" type="text/css" />
{% endblock %}


{% block mainContent %}
<section id="ttm_calendarContainer">
	{% include 'TimeTMCoreBundle:Task:container.html.twig' %}
</section>
{% endblock %}
