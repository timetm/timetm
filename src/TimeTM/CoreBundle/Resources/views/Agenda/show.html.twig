
{% block mainContent -%}

<div class="listContainer">

    <h1>{{ 'agenda.details'|trans }}</h1>

    <table class="view">
        <tbody>
            <tr>
                <td>{{ 'agenda.namefield.label'|trans }}</td>
                <td>{{ agenda.name }}</td>
            </tr>
            <tr>
                <td>{{ 'event.description.label'|trans }}</td>
                <td>{{ agenda.description }}</td>
            </tr>
            <tr>
                <td colspan="2" class="align-center">
					<a class="button no-ajax" href="{{ path('agenda') }}">
					    {{ 'action.back.list'|trans }}
					</a>
					<a class="button no-ajax" href="{{ path('agenda_edit', { 'id': agenda.id }) }}">
					    {{ 'action.edit'|trans }}
					</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
