
{% block mainContent -%}

<div class="listContainer dashboardList">

    {% for day in events %}

    <h1 class="dayHeader">
        {% if loop.index == 1 %}
    			{{ 'nav.today'| trans }}
    	{% else %}
    			{{ 'nav.tomorrow'| trans }}
    	{% endif %}

		{{ eventdays[loop.index0]|date("d") }}
		{{ eventdays[loop.index0]|date("F")|trans }}
		{{ eventdays[loop.index0]|date("Y") }}
    </h1>

    <table class="overflow">
    	{% for event in day %}
    	<tr data-href="{{ path('event_show', { 'id': event.id }) }}">
    		<td class="dateCell">
    			{{ event.startdate|date("H:i") }} - {{ event.enddate|date("H:i") }}
    		</td>
            <td class="agendaCell showForMediumTableCell">
    			{{ event.agenda }}
    		</td>
    		<td class="titleCell">
    			{{ event.title }}
    		</td>
            <td class="titleCell showForMediumTableCell">
    			{{ event.client }}
    		</td>
    		<td class="titleCell showForMediumTableCell">
    			{{ event.place }}
    		</td>
            <td class="titleCell showForMediumTableCell">
    			{{ event.description }}
    		</td>
            <td class="titleCell showForMediumTableCell">
                {% for participant in event.participants %}
                    {% if loop.last %}
                        {{ participant.lastname }}
                    {% else %}
                        {{ participant.lastname }},
                    {% endif %}
            	{% endfor %}
    		</td>
    	</tr>
    	{% else %}
    	<tr>
    		<td colspan="5">
    			no event
    		</td>
    	</tr>
    	{% endfor %}
    </table>
    {% endfor %}
</div>
{% endblock %}
