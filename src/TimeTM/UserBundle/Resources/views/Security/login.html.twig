{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div id="login" class="table">
	<div class="tableCell">
		<form action="{{ path("fos_user_security_check") }}" method="post">
		    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<ul>
				<li class="loginLogo"></li>
{% if error %}
				<li class="errorMsg">
					<div class="tableCell">{{ 'login.error'|trans([], 'messages') }}</div>
				</li>
{% endif %}
				<li>
					<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'login.username'|trans([], 'messages') }}" required="required" />
				</li>
				<li>
					<input type="password" id="password" name="_password" placeholder="{{ 'login.password'|trans([], 'messages') }}" required="required" />
				</li>
				<li>	
					<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
				</li>
				<li>
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
				</li>
			</ul>
		</form>
	</div>
</div>

{% endblock fos_user_content %}
