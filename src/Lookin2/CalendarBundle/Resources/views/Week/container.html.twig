<section id="panel">
<section id="panelCalendarBox">

	<h1> {% trans %}Week{% endtrans %} {{ WeekStamp }} </h1>

	<div id="panelCalendarContent">

		<div id="panelCalendarNav" class="control">
			<table width="100%">
				<tr>
					<td class="today">{% trans %}today{% endtrans %}</td>
{# 					<td class="tertiary"  data-ajax="{{ DayPrevYearUrl }}" title="Previous year" >&lt;</td>#}
{# 					<td class="secondary" data-ajax="{{ DayPrevMonthUrl }}" title="Previous month" >&lt;</td>#}
